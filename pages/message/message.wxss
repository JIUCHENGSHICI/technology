/* 我的消息开始 */
.message-list[data-id="0"]{
  border-top: none;
  margin-top: 40rpx;
}
.message-list{
  position: relative;
  height: 200rpx;
  border-top: 1px solid #d9d9d9;
  padding: 20rpx 40rpx 20rpx 40rpx;
  margin-bottom: 20rpx;
}

/* 每个列表的顶部 */
.message-list-top{
  height: 70rpx;
}
.message-top-left{
  width: 75%;
  height: 70rpx;
  text-align: left;
  color: #000;
  font-weight: 400;
  line-height: 70rpx;
}
.message-top-right{
  width: 21%;
  height: 70rpx;
  text-align: right;
  line-height: 70rpx;
  color: #727070;
  font-size: 25rpx;
}
/* 每个列表的底部 */
.message-list-bottom{
  height: 130rpx;
} 
.message-bottom-left{
  width: 75%;
  height: 130rpx;
  text-align: left;
  font-size: 32rpx;
  color: #151111;
}
.message-bottom-right{
  width: 20%;
  height: 130rpx;
  text-align: left;
}
.message-bottom-right image{
  width: 100%;
  height: 130rpx;
}

/* 小圆点 */
.read{
  position: absolute;
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  background: #e64340;
  right: 10rpx;
  top: 10rpx;
  display: none;
}