/* pages/study/study.wxss */

/* 这个是input外边的一个容器，设置文本居中，让下边的input在html里边居中，再设置input的容器为内联块级元素 */
@import '../../utils/font/stylesheet.wxss';

/* 这个是input直接的父容器 设置样式 */



/* 修改顶部开始 */
 .search-top{
   height: 80rpx;
   padding-top: 20rpx; 
   padding-left: 20rpx;
 }
 .search-top-icon{
   padding: 0 10rpx;
   font-size: 35rpx;
 }
 .search-input{
   border: 1px solid #000;
   height: 60rpx;
   line-height: 60rpx;
   width: 80%;
   border-radius: 30rpx;
 }
  .search-input input{
    margin-top: 6rpx;
  }
 .search-cancle{
    width: 15%; 
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    color: #51d553;
    font-size: 35rpx;
 }
/* 修改顶部结束 */

/* 下边的列表内容开始 */
.app-contact.index0{
  border-top: none;
  margin-top: 35rpx;
}
.app-contact {
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 30rpx;
  padding-bottom: 20rpx;
  border-top: 0.1px solid #e0e0e0;
}

.app-left-img {
  max-width: 30%;
  width: 200rpx;
  height: 200rpx;
  display: inline-block;
}

.app-left-img image {
  width: 100%;
  height: 200rpx;
}

.app-right-test {
  float: right;
  width: 65%;
}

.app-test {
  padding-bottom: 10rpx;
  border-bottom: 0.1rpx solid #e0e0e0;
  margin-bottom: 10rpx;
}

.app-right-test .app-title {
  font-size: 40rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical;
  /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 1;
  /** 显示的行数 **/
  overflow: hidden;
  /** 隐藏超出的内容 **/
}

.app-sm-test {
  font-size: 30rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical;
  /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 3;
  /** 显示的行数 **/
  overflow: hidden;
  /** 隐藏超出的内容 **/
}
