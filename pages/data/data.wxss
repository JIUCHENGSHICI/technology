@import '../../utils/font/stylesheet.wxss';

/* 个人资料页面开始 */
.data-box{
  margin-top: 50rpx;
}
.data-every{
  height: 110rpx;
  border-bottom: 1px solid #e9e9e9;
}
.data-every.data-frist{
  border-top: 1px solid #e9e9e9;
}
/* 左边的 */
.data-left{
  height: 110rpx;
  width: 25%;
  text-align: left;
  line-height: 110rpx;
  font-size: 35rpx;
  padding-left: 25rpx;
}
/* 右边的 */
.data-right{
  width: 70%;
  text-align: left;
  padding-top: 30rpx;
}
.data-right input{
   border: 1px solid #e7e7e7; 
  /* border: 1px solid #000; */
  width: 80%;
  height: 50rpx;
  padding-left: 20rpx;
  font-size: 30rpx;
  color: #626262;
}
/* 头像的样式 开始 */
.data-right-image{
  padding-top: 10rpx;
  padding-right: 85rpx;
}
.data-image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.data-image image{
  width: 100%;
  height: 90rpx;
  border-radius: 50%;
}
/* 头像的样式 结束 */
/* 提交按钮 */
.btn-area{
  text-align: center;
  margin-top: 100rpx;
}

.btn-area button{
  color: #fff;
  background: #008086;
  width: 90%;
}

/* 按钮里边的空格 */
.space{
  color: #008086;
}